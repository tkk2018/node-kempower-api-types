{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "Node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "declaration": true,
    "outDir": "dist",
    "composite": true,
    "rootDir": "src",
    "declarationMap": true
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src/**/*",
  ]
}